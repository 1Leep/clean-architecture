{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "baseUrl": "./src",
        "paths": {
            "@data/*": [
                "data/*"
            ],
            "@domain/*": [
                "domain/*"
            ],
            "@infra/*": [
                "infra/*"
            ],
            "@main/*": [
                "main/*"
            ],
            "@presentation/*": [
                "presentation/*"
            ]
        },
        "allowJs": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": false,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "types": [
            "node"
        ]
    }
}
